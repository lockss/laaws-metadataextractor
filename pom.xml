<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
    http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.lockss</groupId>
    <artifactId>lockss-parent-pom</artifactId>
    <version>1.9.0-SNAPSHOT</version>
  </parent>

  <groupId>org.lockss.laaws</groupId>
  <artifactId>laaws-metadata-extraction-service</artifactId>
  <version>1.1.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>laaws-metadata-extraction-service</name>
  <description>LAAWS Metadata Extraction Service</description>

  <!-- Must be in every lockss-parent-pom/lockss-spring-parent-pom descendant -->
  <scm>
    <connection>${scmConnection}</connection>
    <developerConnection>${scmDeveloperConnection}</developerConnection>
    <url>${scmUrl}</url>
  </scm>

  <properties>
    <!-- GitHub project does not match artifactId -->
    <gitProjectId>laaws-metadataextractor</gitProjectId>
    <skipSpringBootRepackage>false</skipSpringBootRepackage>
    <springServicePort>28120</springServicePort>
    <!-- The main class to start by executing java -jar -->
    <start-class>org.lockss.laaws.mdx.MdxApplication</start-class>
    <skipDocker>false</skipDocker>
  </properties>

  <dependencies>

    <dependency>
      <groupId>org.lockss</groupId>
      <artifactId>lockss-junit4-bundle</artifactId>
      <version>${lockss.junit4.bundleVersion}</version>
      <type>pom</type>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.lockss</groupId>
      <artifactId>lockss-spring-bundle</artifactId>
      <version>${lockss.spring.bundleVersion}</version>
    </dependency>

    <dependency>
      <groupId>org.lockss</groupId>
      <artifactId>lockss-core-bundle</artifactId>
      <version>${lockss.core.bundleVersion}</version>
      <type>pom</type>
    </dependency>

    <!-- LOCKSS daemon -->
    <dependency>
      <groupId>org.lockss.laaws</groupId>
      <artifactId>laaws-metadataextractor-common</artifactId>
      <version>${lockss.metadataextractor-common.version}</version>
    </dependency>
    <dependency>
      <groupId>org.lockss</groupId>
      <artifactId>lockss-plugins</artifactId>
      <version>${lockss.plugins.version}</version>
    </dependency>

    <dependency>
      <groupId>com.fasterxml.jackson.datatype</groupId>
      <artifactId>jackson-datatype-jsr310</artifactId>
      <version>2.9.0</version>
    </dependency>

    <!-- WARCImporter -->
    <dependency>
      <groupId>org.lockss.laaws</groupId>
      <artifactId>laaws-repository-client</artifactId>
      <version>${lockss.repository-client.version}</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>

    <plugins>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>1.7</version>
        <executions>
          <execution>
            <id>add-source</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>src/generated</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>io.swagger</groupId>
        <artifactId>swagger-codegen-maven-plugin</artifactId>
        <version>2.3.1</version>
        <executions>
          <execution>
            <id>generate-swagger-sources</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <inputSpec>${project.basedir}/docs/swagger.yaml</inputSpec>
              <language>spring</language>
              <output>${project.basedir}</output>
              <configOptions>
                <basePackage>org.lockss.laaws.mdx</basePackage>
                <apiPackage>org.lockss.laaws.mdx.api</apiPackage>
                <configPackage>org.lockss.laaws.mdx.config</configPackage>
                <invokerPackage>org.lockss.laaws.mdx</invokerPackage>
                <modelPackage>org.lockss.laaws.mdx.model</modelPackage>
                <hideGenerationTimestamp>true</hideGenerationTimestamp>
                <java8>true</java8>
                <delegatePattern>true</delegatePattern>
                <sourceFolder>src/generated/java</sourceFolder>
                <swaggerDocketConfig>true</swaggerDocketConfig>
              </configOptions>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.6.0</version>
        <executions>
          <execution>
            <id>fix-generated-swagger-sources</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <skip>${skipCodegenFix}</skip>
              <workingDirectory>${project.basedir}</workingDirectory>
              <executable>${project.basedir}/scripts/swaggerProcessing.sh</executable>
            </configuration>
          </execution>
        </executions>
      </plugin>

    </plugins>

  </build>

  <repositories>
    <repository>
      <id>lockss-legacy</id>
      <name>LOCKSS Legacy JARs</name>
      <url>https://github.com/lockss/lockss-legacy-jars/raw/master/maven2</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <releases>
        <enabled>true</enabled>
      </releases>
    </repository>
  </repositories>

</project>
